


<table class="border">
  <thead>
    <tr>
      <th>Title</th>
      <th class="w-50">Text</th>
      <th>Country</th>
      <th>Latitude</th>
      <th>Longtitude</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td class="w-50"><%= article.text %></td>
        <td><%= article.country %></td>
        <td><%= article.latitude %></td>
        <td><%= article.longtitude %></td>
        <td><%= article.user.name %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>